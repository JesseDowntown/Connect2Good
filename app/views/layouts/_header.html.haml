%nav.top-bar{"data-topbar" => ""}
  %ul.title-area
    %li.name
      %h1
        =link_to "Connect2Good", root_path
    %li.toggle-topbar.menu-icon
      %a{href: "#"} Menu
  %section.top-bar-section
    / Right Nav Section
    %ul.right
      %li.has-form
        = form_tag needs_path, method: :get do
          .row.collapse
            .large-8.small-9.columns
              = text_field_tag :query, params[:query], placeholder: "Search Needs", class: "search"
            .large-4.small-3.columns
              = submit_tag "Search", class: "button expand"
      %li.has-dropdown
        - if current_user
          %a{href: "#"} Settings
          %ul.dropdown
            %li= link_to "Sign out", destroy_user_session_path, :method => :delete
        - else
          = link_to "Try it", "#"
          %ul.dropdown
            %li= link_to "Sign_in", new_user_session_path
            %li= link_to "Sign up", new_user_registration_path