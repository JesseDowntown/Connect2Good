<%= form_for @offer do |f| %>
  <% if signed_in? %>
    <% donor_id = current_user.id %>
  <% else %>
    <% donor_id = "" %>
  <% end%>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.hidden_field :donor_id, value:donor_id %>
  <%= f.hidden_field :need_id, value: @need.id %>
  <%= f.hidden_field :organization_id, value: @need.organization.id %>
  <%= f.hidden_field :status, value: "pending" %>
  <%= f.submit %>
<% end %>