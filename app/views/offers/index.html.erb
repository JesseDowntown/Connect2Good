<h1>Offers List</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Org</th>
      <th>Donor</th>
      <th>Status</th>
      <th>Update</th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.need.description, offer_path(offer) %></td>
        <td><%= offer.organization.name %></td>
        <td><%= offer.donor.name %></td>
          <%= form_for offer do |f| %>
        <td>
            <%= f.select :status, options_for_select(["pending","accepted","rejected"], offer.status) %>
        </td>
        <td>
            <%= f.submit value: "Update" %>
        </td>
          <% end %>
      </tr>
  
    <% end %>
  </tbody>
</table>

