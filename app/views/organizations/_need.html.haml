
%tr#needs
  %td
    = link_to need.description, need_path(need) 
  %td
    - if need.category.present?
      = need.category 
    - else
      No category listed
  %td
    = link_to 'Edit', need_path(need.id), method: :edit
  %td
    = link_to 'Delete', need_path(need.id), confirm: 'Are your sure?', method: 'delete', method: :delete