%tr.delete_need
  %td
    = simple_format link_to word_wrap(need.description ), need_path(need)  
  %td
    - if need.category.present?
      = need.category 
    - else
      No category listed
  %td
    = link_to 'Edit', need_path(need.id), method: :edit
  %td
    = link_to 'Delete', need, confirm: 'Are your sure?', method: :delete, remote: true