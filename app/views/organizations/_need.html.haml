%tr{class: "delete_need_#{need.id}"}
  %td
    = simple_format word_wrap(need.description ) 
  %td#activity_status
    = form_for need do |f|
      - if need.status == true
        Active #{f.check_box :status, class: 'checkable', remote: true}
      - else
        Inactive #{f.check_box :status, class: 'checkable', remote: true}
      
  %td
    - if need.category.present?
      = need.category 
    - else
      No category listed

  %td
    = need.created_at.strftime("%d %b. %Y") 
  %td
    = link_to 'Edit', need_path(need.id), method: :get, remote: true
  %td
    = link_to 'Delete', need, confirm: 'Are you sure?', method: :delete, remote: true
  