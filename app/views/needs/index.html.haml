.view-page
  .center  
    %h3 Needs by Organization
    .row
      .large-12.columns
        - @needs.each do |need|
          .large-3.medium-4.small-6.columns
            .card
              = link_to organization_path(need.organization.id) do
                .org-panel
                  .center
                    %h6= need.organization.name
              = link_to need_path(need) do
                .upper-panel
                  .center  
                    %h5= need.description.truncate(30)
                    %h7 Need Type: #{need.category} 
              = link_to new_offer_path(need_id: need.id) do
                .panel
                  .center
                    %h6 Make Offer
        = will_paginate @needs, renderer: FoundationPagination::Rails, outer_window: 0, inner_window: 1  

