.view-page
  %div
    .row
      %h3 Needs by Organization
      %table
        %thead
          %tr
            %th Organization
            %th Need
        %tbody
          - @needs.each do |need|
            %tr
              %td= need.organization.name 
              %td= link_to need.description, need_path(need)      
      = will_paginate @needs, renderer: FoundationPagination::Rails, outer_window: 0, inner_window: 1

