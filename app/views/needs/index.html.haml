.view-page
  .center  
    %h3 Needs by Organization
    .row
      .large-12.columns
        .row
          - @needs.each do |need|
            .large-3.medium-4.small-6.columns
              .panel
                %h5= link_to need.organization.name, organization_path(need.organization.id)
                %h6 Type: {need.type} 
                %div.snippet
                  %p= link_to need.description.truncate(60), need_path(need)
                %h7= link_to 'Make Offer', new_offer_path(need_id: need.id)
        = will_paginate @needs, previous_label: h("<"), next_label: h(">")      

