.view-page
  .center  
    %h3 Needs by Organization
    .row
      .large-12.columns
        .row
          - @needs.each do |need|
            .large-3.medium-4.small-6.columns
              .org-panel
                .center
                  %h6= link_to need.organization.name, organization_path(need.organization.id)
              .upper-panel
                .center  
                  %h5= link_to need.description.truncate(30), need_path(need)
                  %h7 Need Type: {need.type} 
              .panel
                .center
                  %h6= link_to 'Make Offer', new_offer_path(need_id: need.id)
        = will_paginate @needs, renderer: FoundationPagination::Rails, outer_window: 0, inner_window: 1  

